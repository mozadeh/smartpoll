        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/poweredbyGoogle"
        android:layout_width="206dp"
        android:layout_height="32dp"
        android:src="@drawable/powereby"
        android:layout_weight="1"
        
        android:layout_gravity="bottom|right"
        android:background="#f8f8f8"
         />

</LinearLayout>